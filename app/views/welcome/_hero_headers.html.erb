<!-- Hero Carousel Section avec Design Original Amélioré -->
<div class="carousel fade-carousel slide" data-bs-ride="carousel" data-bs-interval="4000" id="bs-carousel">
  <!-- Overlay pour effet de profondeur -->
  <div class="overlay"></div>

  <!-- Indicateurs Bootstrap 5 -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#bs-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#bs-carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#bs-carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>

  <!-- Slides du Carousel -->
  <div class="carousel-inner">
    <!-- Slide 1 - Économies -->
    <div class="carousel-item active">
      <div class="slide-1"></div>
      <div class="hero">
        <div class="container">
          <hgroup>
            <h1 class="display-3 fw-bold mb-4">Faites des économies</h1>
            <h3 class="lead fs-3">Rentabilisez vos déplacements grâce à vos bagages</h3>
          </hgroup>
          <div class="hero-buttons mt-5">
            <%= link_to new_shipping_request_path, class: 'btn btn-hero btn-lg me-3' do %>
              <i class="fas fa-box me-2"></i> Envoyer un colis
            <% end %>
            <%= link_to new_kilo_offer_path, class: 'btn btn-hero-outline btn-lg' do %>
              <i class="fas fa-plane me-2"></i> Devenir transporteur
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 2 - Sérénité -->
    <div class="carousel-item">
      <div class="slide-2"></div>
      <div class="hero">
        <div class="container">
          <hgroup>
            <h1 class="display-3 fw-bold mb-4">Voyagez serein</h1>
            <h3 class="lead fs-3">Nous sommes là, à vos côtés, pour organiser vos déplacements</h3>
          </hgroup>
          <div class="hero-buttons mt-5">
            <%= link_to shipping_requests_path, class: 'btn btn-hero btn-lg me-3' do %>
              <i class="fas fa-search me-2"></i> Parcourir les demandes
            <% end %>
            <%= link_to kilo_offers_path, class: 'btn btn-hero-outline btn-lg' do %>
              <i class="fas fa-suitcase me-2"></i> Voir les offres
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Slide 3 - Équipe -->
    <div class="carousel-item">
      <div class="slide-3"></div>
      <div class="hero">
        <div class="container">
          <hgroup>
            <h1 class="display-3 fw-bold mb-4">Une équipe dédiée</h1>
            <h3 class="lead fs-3">Forte capacité de réactivité, d'innovation et de flexibilité</h3>
          </hgroup>
          <div class="hero-buttons mt-5">
            <%= link_to team_path, class: 'btn btn-hero btn-lg me-3' do %>
              <i class="fas fa-users me-2"></i> Notre équipe
            <% end %>
            <%= link_to contact_path, class: 'btn btn-hero-outline btn-lg' do %>
              <i class="fas fa-envelope me-2"></i> Nous contacter
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contrôles du Carousel Bootstrap 5 -->
  <button class="carousel-control-prev" type="button" data-bs-target="#bs-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Précédent</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#bs-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Suivant</span>
  </button>
</div>

<!-- Section Comment ça marche -->
<section class="how-it-works py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="display-5 fw-bold">Comment ça marche ?</h2>
      <p class="lead text-muted">Un processus simple et sécurisé en 3 étapes</p>
    </div>

    <div class="row g-4">
      <!-- Pour les expéditeurs -->
      <div class="col-lg-6">
        <div class="process-card h-100">
          <div class="process-header">
            <i class="fas fa-box fa-2x"></i>
            <h3>Pour les expéditeurs</h3>
          </div>
          <div class="process-steps">
            <div class="step">
              <div class="step-number">1</div>
              <div class="step-content">
                <h5>Publiez votre demande</h5>
                <p>Décrivez votre colis et indiquez votre trajet souhaité</p>
              </div>
            </div>
            <div class="step">
              <div class="step-number">2</div>
              <div class="step-content">
                <h5>Recevez des offres</h5>
                <p>Les voyageurs vous proposent leurs meilleurs tarifs</p>
              </div>
            </div>
            <div class="step">
              <div class="step-number">3</div>
              <div class="step-content">
                <h5>Expédiez en sécurité</h5>
                <p>Paiement sécurisé et suivi en temps réel</p>
              </div>
            </div>
          </div>
          <%= link_to "Commencer maintenant →", new_shipping_request_path, class: "btn btn-primary btn-lg w-100 mt-4" %>
        </div>
      </div>

      <!-- Pour les voyageurs -->
      <div class="col-lg-6">
        <div class="process-card h-100">
          <div class="process-header">
            <i class="fas fa-plane fa-2x"></i>
            <h3>Pour les voyageurs</h3>
          </div>
          <div class="process-steps">
            <div class="step">
              <div class="step-number">1</div>
              <div class="step-content">
                <h5>Proposez votre espace</h5>
                <p>Indiquez vos trajets et la capacité disponible</p>
              </div>
            </div>
            <div class="step">
              <div class="step-number">2</div>
              <div class="step-content">
                <h5>Acceptez des colis</h5>
                <p>Choisissez les demandes qui vous conviennent</p>
              </div>
            </div>
            <div class="step">
              <div class="step-number">3</div>
              <div class="step-content">
                <h5>Gagnez de l'argent</h5>
                <p>Rentabilisez facilement vos déplacements</p>
              </div>
            </div>
          </div>
          <%= link_to "Devenir transporteur →", new_kilo_offer_path, class: "btn btn-success btn-lg w-100 mt-4" %>
        </div>
      </div>
    </div>
  </div>
</section>

