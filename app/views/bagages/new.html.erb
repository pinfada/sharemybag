<% provide(:title, 'Enregistrement bagage') %>
<h1>Enregistrement des bagages</h1>

<% bagage_count = 1 %>
<div class="row"> 
  <div class="col-md-6 col-md-offset-3"> 
    <h2>Pr√©cisez les informations pour vos bagages</h2>
    <%= form_for @bagage, url: user_bagages_path do |bagages_form| %>
        <%= render partial: 'users/info_bagages', locals: {b: bagage_count, f: bagages_form} %>
        <% bagage_count += 1 %>
        <%= hidden_field_tag(:vol_id,  params[:vol_id]) %>
        <div class = "col-sm-12.text-center">
          <%= bagages_form.submit "Valider", class: "btn btn-primary" %> 
        </div>
    <% end %>
  </div> 
</div>
